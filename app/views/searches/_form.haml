= form_for search do |f|
  - if search.errors.any?
    #error_explanation
      %h2= "#{pluralize(search.errors.count, "error")} prohibited this search from being saved:"
      %ul
        - search.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :query
    = f.text_field :query
  .field
    = f.label :make
    = f.text_field :make
  .field
    = f.label :max_price
    = f.text_field :max_price
  .field
    = f.label :min_price
    = f.text_field :min_price, placeholder: 0
  .actions
    = f.submit 'Save', class: 'button success'
