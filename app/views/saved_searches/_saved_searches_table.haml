%table
  %thead
    %tr
      %th Query String
      %th Make
      %th Minimum Price
      %th Maximum Price
      %th Last Updated
      %th
      %th
      %th
      %th

  %tbody
    - saved_searches.each do |saved_search|
      %tr
        %td= saved_search.query
        %td= saved_search.make
        %td= saved_search.min_price
        %td= saved_search.max_price
        %td= saved_search.updated_at

        %td= link_to 'Edit', edit_saved_search_path(saved_search), class: 'button small primary'
        %td= link_to 'Destroy', saved_search_path(saved_search), method: :delete, data: { :confirm => 'Are you sure?' }, class: 'button small warning'
        %td= link_to 'View', listing_result_path(saved_search), method: :get, class: 'button small secondary'
        %td= link_to 'Update Listing', listing_result_path(saved_search), method: :put, class: 'button small danger'

